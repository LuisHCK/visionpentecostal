
<% link_edit = edit_program_path(@program)%>

<div class="grey lighten-2 container">


<div style="padding-top: 1%; padding-left:5%; padding-rigth:5%" class="card-panel  blue darken-2 white-text">
    <h4 style="margin-left: 5%">
       <%= @program.titulo %>
    </h4>
</div>

    <%img = @program.cover.url()%>
    <img class="max-img" src="<%= img %>">

<div style="padding-bottom:5%" class="container">
    <p>
      <%= @program.descripcion %>
    </p>
</div>

 <% if admin_signed_in?%>

  <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large red">
      <i class="large material-icons">mode_edit</i>
    </a>
    <ul>
      <li><a href="#modal1" class="modal-trigger btn-floating red"><i class="material-icons">delete</i></i></a></li>
      <li><a href="<%=link_edit%>" class="btn-floating yellow darken-1"><i class="material-icons">code</i></a></li>
      <li><a href="/posts/new" class="btn-floating green"><i class="material-icons">publish</i></a></li>
    </ul>
  </div>
  
<%= render "/layouts/popup", titulo: @program.titulo, delete: "program" %>

<% end %>

</div>
</div>
 </div>  
